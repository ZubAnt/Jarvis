CC = g++

C11 = -std=c++11

BINCLUDE = -I/usr/include

BLIB = -L/usr/lib

LIBS = -lboost_system-mt

LCURL = -lcurl

SOURCE = test.cpp

OSOURCE = test.o

CFLAG = -c

all: test1
	rm -rf *.o

test1: test1.o
	$(CC) $(C11) $(BINCLUDE) $(BLIB) $(LIBS) $(OSOURCE) $(LCURL) -o test

test1.o: $(SOURCE)
	$(CC) $(CFLAG) $(SOURCE)

clean:
	rm -rf test
